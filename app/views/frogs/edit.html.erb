<%= render template: "layouts/header" %>

<%= form_for(Frog.find(params[:id])) do |f| %>
  Frog Name: <%= f.text_field :name %><br />
  Frog Color: <%= f.text_field :color %><br />
  
  <!-- Railsify this section -->
  <label for="lives">Lives</label>
  <select id="lives" name="pond_id">
    <% @ponds.each do |pond| %>
      <option value="<%= pond.id %>"><%= pond.name %></option>
    <% end %>
    <br>
  </select>
  <!-- end section -->

  <%= f.submit %>
<% end %>

<%= link_to 'Back', ponds_path %>
<%= render template: "layouts/footer" %>
